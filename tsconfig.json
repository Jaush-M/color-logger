{
    "compilerOptions": {
        "target": "ES2017",
        "module": "CommonJS",
        "outDir": "dist",
        "declaration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src"
    ]
}